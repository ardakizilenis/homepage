<%
const navItems = [
  { key: "home", label: "Home", href: "/home-en", icon: "home-svgrepo" },
  { key: "cv", label: "CV", href: "/cv-en", icon: "curriculum-with-picture-svgrepo" },
  { key: "portfolio", label: "Projects", href: "/portfolio-en", icon: "tick-circle-svgrepo" },
  { key: "about-me", label: "About Me", href: "/about-me-en", icon: "profile-outlined-svgrepo" },
  { key: "contact", label: "Contact", href: "/contact-en", icon: "mail-svgrepo" }
];
%>

<header class="d-flex justify-content-center py-2 mb-2">
    <ul class="nav nav-pills gap-5">

        <% navItems.forEach(item => { 
            const isActive = locals.current === item.key;
        %>

        <li class="nav-item">
            <div class="holographic-container">
                <div class="holographic-card">
                    <a href="<%= item.href %>"
                       class="nav-link <%= isActive ? 'active' : '' %>"
                       <%= isActive ? 'aria-current="page"' : '' %>>
                        
                        <span class="nav-icon">
                            <img src="/images/<%= item.icon %>-<%= isActive ? 'white' : 'green' %>.svg" alt="">
                        </span>
                        <span class="nav-text"><%= item.label %></span>
                    </a>
                </div>
            </div>
        </li>

        <% }); %>

    </ul>
</header>
